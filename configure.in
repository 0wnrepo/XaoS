			  DRIVERLIBS="$DRIVERLIBS lib/libsffe.a"
			  ASM_CMPLX_O="asm/cmplx.o"
		else
		    AC_MSG_ERROR([Neither GSL, nor NASM is installed. XaoS is unable to compile.])
  		fi
 fi

dnl   Added 20070306 by JB Langston
dnl   Apple's gcc chokes on the assembly in i386.c:
dnl     i386.c: In function `_control87': 
dnl     i386.c:31: error: PIC register `bx' clobbered in `asm' 
dnl   so we disable assembly on that platform
